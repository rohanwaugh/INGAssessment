<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ui.HeroDetailsActivity"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/heroRealName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="@dimen/details_tv_text_size"
        android:layout_marginTop="@dimen/details_tv_top_margin"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

        <TextView
        android:id="@+id/heroTeam"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="@dimen/details_tv_top_margin"
        android:textSize="@dimen/details_tv_text_size"
        app:layout_constraintTop_toBottomOf="@+id/heroRealName"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <TextView
            android:id="@+id/firstAppearance"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="@dimen/details_tv_top_margin"
            android:textSize="@dimen/details_tv_text_size"
            app:layout_constraintTop_toBottomOf="@+id/heroTeam"
            app:layout_constraintLeft_toLeftOf="parent"/>

    <TextView
            android:id="@+id/createdBy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="@dimen/details_tv_top_margin"
            android:textSize="@dimen/details_tv_text_size"
            app:layout_constraintTop_toBottomOf="@+id/firstAppearance"
            app:layout_constraintLeft_toLeftOf="parent"/>

</android.support.constraint.ConstraintLayout>